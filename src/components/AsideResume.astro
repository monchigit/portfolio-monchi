---
import { RESUME } from '@service/resume.js'
---

<div 
		class="
		max-lg:hidden
		flex 
		justify-center items-center
		gap-10
		w-[100%] 
		py-1
		">
		{
			RESUME.map(resume => (
				<article 
					class="flex flex-col justify-center w-[200px] bg-gray-100 text-gray-800 px-3 py-2 rounded-md dark:bg-gray-700 dark:text-gray-300 transition-all duration-400 groupshadow-md shadow-black">
					<h3 class="text-4xl text-center font-bold text-[var(--brand-color)]">
					 	{resume.number}
					</h3>
					<h4 class="text-2xl text-center font-semibold">
						{resume.name}
					</h4>
				</article>
			))
		}
	</div>