---
import ContactBadge from '@components/ContactPill.astro';
import GithubIcon from '@icons/Github.astro';
import EmailIcon from '@icons/Email.astro';
import LinkedInIcon from '@icons/LinkedIn.astro';
import TelegramIcon from '@icons/Telegram.astro';
---


<section
	id="contact"
	class="
	flex flex-col gap-4
	bg-[#040404]
	px-[28px] py-6
	rounded-lg
	shadow-lg shadow-black
	sm:px-14 sm:py-9
	">
	<h2
		class="
		text-xl font-bold
		sm:text-2xl
		">Are You <span class="text-[var(--brand-color)]">Ready</span> To Take The Best Call and <span class="text-[var(--brand-color)]">Hire Me?</span></h2>
	<div class="flex flex-col gap-4">
		<h3
		class="
		text-2xl font-bold pb-2
		sm:text-3xl sm:pb-4
		">Let's Get In Touch ü§ùüèª</h3>
		<div 
			class="
			flex flex-wrap
			gap-2
			sm:gap-3
			">
			<ContactBadge href="https://www.linkedin.com/in/moises-sanchez-9b7457336/">
				<LinkedInIcon class="size-5 sm:size-6 opacity-70 group-hover:scale-110 group-hover:opacity-100 transition-all duration-400"/>
				<span class="opacity-90 group-hover:opacity-100">LinkedIn</span>
			</ContactBadge>
			<ContactBadge href="https://github.com/monchigit">
				<GithubIcon class="size-5 sm:size-6 opacity-70 group-hover:scale-110 group-hover:opacity-100 transition-all duration-400"/>
				<span class="opacity-90 group-hover:opacity-100">Github</span>
			</ContactBadge>
			<ContactBadge href="mailto:moisesanchezwork@gmail.com?subject=Estamos%20interesados%20en%20contratarte">
				<EmailIcon class="size-5 sm:size-6 opacity-70 group-hover:scale-110 group-hover:opacity-100 transition-all duration-400"/>
				<span class="opacity-90 group-hover:opacity-100">moisesanchezwork@gmail.com</span>
			</ContactBadge>
			<ContactBadge href="https://t.me/moisessanchez04">
				<TelegramIcon class="size-5 sm:size-6 opacity-70 group-hover:scale-110 group-hover:opacity-100 transition-all duration-400"/>
				<span class="opacity-90 group-hover:opacity-100">Telegram</span>
			</ContactBadge>
		</div>
	</div>
</section>